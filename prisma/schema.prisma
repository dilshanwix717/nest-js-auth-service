// prisma/schema.prisma
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id        String   @id @default(uuid())
    username  String   @unique
    email     String   @unique
    password  String
    roles     String[] @default(["user"])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
